{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 400,
  "title": "Number of Airports by Region",
  "data": {
    "url": "data/Airports_Malaysia.csv"
  },
  "transform": [
    {
      "filter": "datum.type != 'closed'"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar"
      },
      "encoding": {
        "x": {
          "aggregate": "count",
          "field": "region_name",
          "type": "quantitative",
          "title": "Number of Airports"
        },
        "y": {
          "field": "region_name",
          "type": "nominal",
          "title": "Region",
          "sort": "-x"
        },
        "color": {
          "condition": {
            "test": "datum.region_name == 'Sabah' || datum.region_name == 'Sarawak'",
            "value": "red"
          },
          "value": "#211496"
        },
        "tooltip": [
          {"field": "region_name", "title": "Region"},
          {"aggregate": "count", "field": "region_name", "title": "Number of Airports"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 3
      },
      "encoding": {
        "x": {
          "aggregate": "count",
          "field": "region_name",
          "type": "quantitative"
        },
        "y": {
          "field": "region_name",
          "type": "nominal",
          "sort": "-x"
        },
        "text": {
          "aggregate": "count",
          "field": "region_name",
          "type": "quantitative"
        },
        "color": {"value": "black"}
      }
    }
  ]
}
