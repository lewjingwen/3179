{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": "Proportion of Different Airport Types",
  "data": {
    "url": "data/Airports_Malaysia.csv"
  },
  "transform": [
    {
      "filter": "datum.type != 'closed'"
    },
    {
      "aggregate": [{"op": "count", "as": "count"}],
      "groupby": ["type"]
    }
  ],
  "layer": [
    {
      "mark": "arc",
      "encoding": {
        "theta": {
          "field": "count",
          "type": "quantitative",
          "stack": true
        },
        "color": {
          "field": "type",
          "type": "nominal",
          "title": "Airport Type",
          "scale": {
            "domain": [
              "large_airport",
              "medium_airport",
              "small_airport",
              "heliport",
              "balloonport"
            ],
            "range": [
              "#1abc9c",
              "#377eb8",
              "#4daf4a",
              "#984ea3",
              "#ff7f00"
            ]
          },
          "condition": {
            "test": "datum.type == 'large_airport'",
            "value": "#1abc9c"  
          },
          "legend": {"orient": "right"}
        },
        "tooltip": [
          {"field": "type", "type": "nominal", "title": "Airport Type"},
          {"field": "count", "type": "quantitative", "title": "Count"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "radiusOffset": 10,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "black"
      },
      "encoding": {
        "text": {"field": "count", "type": "quantitative"},
        "theta": {
          "field": "count",
          "type": "quantitative"
        },
        "color": {"value": null},
        "tooltip": null
      }
    }
  ]
}
